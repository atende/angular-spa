{
  "name": "angular-spa",
  "version": "0.3.6",
  "description": "Utilities for angular 2 applications backed by generator-spring-spa project",
  "main": "index.js",
  "angular-cli": {},
  "scripts": {
    "clean": "rm -rf dist/",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "lint:fix": "tslint ./src/**/*.ts --fix",
    "test": "karma start ./karma/karma.conf.js",
    "test-once": "karma start ./karma/karma.conf.js --singleRun=true",
    "test:headless": "karma start ./karma/karma.conf.js --browsers PhantomJS --autoWatch=true --singleRun=false",
    "test:single": "karma start ./karma/karma.conf.js --browsers PhantomJS",
    "compile": "ngc",
    "watch": "ngc --watch",
    "pree2e": "npm run webdriver:update",
    "e2e": "protractor protractor.config.js --kill-others --success first",
    "webdriver:update": "webdriver-manager update",
    "copyfiles": "cp -rf package.dist.json dist/package.json && cp -rf README.md LICENSE dist",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/angular-spa.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular-spa.umd.min.js",
    "keepVersion": "export version=`json -f package.json version`;json -I -f package.dist.json -e `echo \"this.version='$version'\"`",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run keepVersion && npm run copyfiles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atende/angular-spa.git"
  },
  "keywords": [
    "angular2",
    "ng2",
    "utils",
    "ui",
    "keycloak",
    "security"
  ],
  "author": "Giovanni Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atende/angular-spa/issues"
  },
  "homepage": "https://github.com/atende/angular-spa#readme",
  "dependencies": {
    "@angular/common": ">=2.0.0 <=3.0.0",
    "@angular/core": ">=2.0.0 <=3.0.0",
    "@angular/http": ">=2.0.0 <=3.0.0",
    "@angular/platform-browser": ">=2.0.0 <=3.0.0",
    "@angular/router": ">=3.0.0 <=4.0.0",
    "angular-http-interceptor": "^0.2.3",
    "core-js": "^2.4.1",
    "keycloak-js": "^2.4.0",
    "rxjs": ">=5.0.0-beta.12 <= 6.0.0",
    "zone.js": ">=0.6.26 < 2.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^2.4.2",
    "@angular/compiler-cli": "^2.4.2",
    "@angular/platform-browser": ">=2.0.0 <=3.0.0",
    "@angular/platform-browser-dynamic": ">=2.0.0 <=3.0.0",
    "@ngtools/webpack": "^1.2.1",
    "@types/jasmine": "^2.5.36",
    "@types/node": "^6.0.46",
    "es6-shim": "^0.35.1",
    "html-webpack-plugin": "^2.22.0",
    "jasmine-core": "^2.4.1",
    "json": "^9.0.4",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.26",
    "karma-webpack": "^1.7.0",
    "phantomjs-prebuilt": "^2.1.7",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.3",
    "rollup": "^0.41.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "tslint-loader": "^3.3.0",
    "typescript": "~2.1.4",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.13.1"
  }
}
